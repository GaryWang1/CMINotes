create procedure {databaseOwner}{objectQualifier}CMI_NewsIndustry_Update

	@MajorIndustryGroupID			int,	
	@Industry			varchar(256),
	@SICCode int,
	@MajorIndustryGroup varchar(256)

as
BEGIN
	DECLARE @ct INT;
	DECLARE @majorID INT;

	if @MajorIndustryGroupID>0  
	begin
		update {databaseOwner}{objectQualifier}CMI_NewsIndustry
		set		MajorIndustryGroupID		= @MajorIndustryGroupID,
				Industry		= @Industry
		where  SICCode = @SICCode;

		IF @@ROWCOUNT = 0
		insert into {databaseOwner}{objectQualifier}CMI_NewsIndustry (
			MajorIndustryGroupID,
			Industry,
			SICCode
			) 
			values (
				@MajorIndustryGroupID,
				@Industry,
				@SICCode
			);
	end
	else if @MajorIndustryGroupID=0
	begin
		select @ct= count(*) from {databaseOwner}{objectQualifier}CMI_NewsIndustry
			where  SICCode = @SICCode;

		if @ct =0 
		begin
			select @majorID=0;
			select @majorID= MajorIndustryGroupID from {databaseOwner}{objectQualifier}CMI_NewsMajorIndustryGroup
			where MajorIndustryGroup =@MajorIndustryGroup;

			if @majorID=0
				RAISERROR (N'The Major Industry Group, %s, doesn''t match with any existing Major Industry Groups in the database.', 10, 1, @MajorIndustryGroup); 
			else		 
				insert into {databaseOwner}{objectQualifier}CMI_NewsIndustry (
				MajorIndustryGroupID,
				Industry,
				SICCode
				) 
				values (
					@majorID,
					@Industry,
					@SICCode
				);
		end
	end
END
GO

